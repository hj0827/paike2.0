{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "baseUrl": ".", //paths 路径解析起点
    "paths": {
      "@/*": ["src/*"] // 别名路径设置
    },
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
